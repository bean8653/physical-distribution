			</if>
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from t_goods_order t
		<include refid="where" />
	</select>

	<select id="list" resultType="Order">
		select * from t_goods_order t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update t_goods_order t
		<set>
			<if test="orderId != null">
